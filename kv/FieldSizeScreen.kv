#:kivy 1.11.1

<FieldSizeScreen>:

    x1:size_of_field                               # this will connect "X1" with size_of_field text field through ObjectProperty
    

    name: "FieldSizeScreen"
    id: FieldSizeScreen
    canvas:
        Rectangle:
            source: 'png/blue.png'
            size:  self.width, self.height
        Rectangle:
            pos: 0, self.height /1.2
            size: self.width, 5
    Label:
        text:  "Color stones "
        pos_hint: {'x': 0,'y': .42}              
        font_size: 70
        color: (0,0,0,1) 

    Label:
        text:  "Field size"
        pos_hint: {'x': -.2,'y': .1}              
        font_size: 50
    TextInput:
        id: size_of_field                                  # this ID is important ---> it will be x1 in python file
        hint_text:  "Choose number from 3 to 9:"
        size_hint: 0.2, 0.2
        pos_hint: {'x': .2,'y': .32}

    ImageButton:
        source: 'png/start_game.png'
        size_hint: 0.2, 0.3
        pos_hint: {'x': .5,'y': .3} 
        on_press: root.btn ()                                      # if button is pressed, the "btn" function in the .py file is called 
         
    Label:
        text:  "Start Game"
        pos_hint: {'x': .1,'y': .1}              
        font_size: 50    

    ImageButton:
        source: 'png/left_ikon.png'
        size_hint: 0.2, 0.2
        pos_hint: {'x': .1,'y': .05}                     
        on_press: root.manager.current = "HomeScreen" 

