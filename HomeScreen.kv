#:kivy 1.11.1

<HomeScreen>:
    name: "HomeScreen"
    id: HomeScreen
    canvas:
        Rectangle:
            source: 'png/blue.png'
            size:  self.width, self.height
        Rectangle:
            pos: 0, self.height /1.2
            size: self.width, 5
    Label:

        text:  "Color stones "
        pos_hint: {'x': 0,'y': .42}              
        font_size: 40
        color: (0,0,0,1) 

    ImageButton:
        source: 'png/size.png'
        size_hint: 0.2, 0.3
        pos_hint: {'x': .2,'y': .3}                     
        on_press: root.manager.current = "FieldSizeScreen" 
    Label:
        text:  "Your field size: "
        pos_hint: {'x': -.2,'y': .1}              
        font_size: 20
    

    ImageButton:
        source: 'png/settings.png'
        size_hint: 0.2, 0.3
        pos_hint: {'x': .7,'y': .03}
    
        
            